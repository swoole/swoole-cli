{
  "require": {
    "marcj/topsort": "^2.0",
    "ext-posix": "*",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "SwooleCli\\": "sapi/src"
    },
    "files": [
      "sapi/src/library_builder/library_builder.php",
      "sapi/src/library_builder/library_install_builder.php",
      "sapi/src/library_builder/library_install_builder_test.php",
      "sapi/src/library_builder/library_install_builder_image.php",
      "sapi/src/library_builder/library_install_builder_vision.php",
      "sapi/src/library_builder/library_install_builder_extra.php",
      "sapi/src/library_builder/library_install_builder_extensions.php",
      "sapi/src/library_builder/library_install_builder_tools.php"
    ]
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "friendsofphp/php-cs-fixer": "^3.15",
    "squizlabs/php_codesniffer": "^3.7",
    "swoole/ide-helper": "@dev"
  },
  "scripts": {
    "test": "phpunit",
    "format-library_builder": "php-cs-fixer  fix sapi/src/library_builder --rules=@PSR12 --verbose -vvv",
    "format-src": "vendor/bin/php-cs-fixer fix sapi/src/ --rules=@PSR12 --verbose -vvv",
    "format-conf.d": "vendor/bin/php-cs-fixer fix conf.d --rules=@PSR12 --verbose -vvv"
  }
}
