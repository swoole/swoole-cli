{
  "require": {
    "marcj/topsort": "^2.0",
    "ext-posix": "*",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "SwooleCli\\": "sapi"
    },
    "files": [
      "library_builder.php",
      "library_install_builder.php",
      "library_install_builder_test.php",
      "library_install_builder_image.php",
      "library_install_builder_vision.php",
      "library_install_builder_extra.php",
      "library_install_builder_extensions.php",
      "library_install_builder_tools.php"
    ]
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "friendsofphp/php-cs-fixer": "^3.15",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "format-code": "php-cs-fixer  fix ./library_install_builder.php --rules=@PSR12"
  }
}
